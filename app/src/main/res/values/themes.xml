<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Example" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/light_orange</item>
        <item name="colorPrimaryVariant">@color/medium_orange</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/bright_orange</item>
        <item name="colorSecondaryVariant">@color/bright_orange</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Example.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MakeItSo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MakeItSo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>